{{ template "header" . }}

<div class="container">
    <div class="row">

        <div class="col-md-12">
            <h1>News List</h1>

            <ul>
                {{ range .News }}
                    <li>
                        <a href="show/?id={{ .Alias }}">
                            {{ .Title }}
                        </a>
                        <p>
                            {{ .Description }}
                        </p>
                        <hr />
                    </li>
                {{ end }}
            </ul>

            <nav aria-label="Page navigation">
                <ul class="pagination">

                    {{ range $i, $e := loop .Pagination.TotalPage }}
                        <li>
                            <a href="?page={{add $i 1}}">
                                {{add $i 1}}
                            </a>
                        </li>
                    {{end}}

                </ul>
            </nav>

            <br>
            <hr>

        </div>

    </div>
</div>

{{ template "footer" }}